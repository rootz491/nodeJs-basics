<%- include('header'); -%>

    <link rel="stylesheet" href="css/contact.css">

    <div class="content">    
        <h1 id="heading">contact ğŸ—£</h1>
        <p>We have <%= ppls.length %> experts for now!</p>
        <div>
            <% ppls.forEach(ppl => { %>
                <a href='/contact?expert=<%= ppl %>'>@<%= ppl %></a>
            <% }); %>
        </div>

        <div class="contact-form">
            <h1>Send a message ğŸ“§</h1>
            <form action="/contact" method="POST">
                <div>
                    <label for="expert">Expert</label>
                    <select name="expert" id="expert" required>
                        <option value="nik">Nikhil kumar Swain</option>
                        <option value="sudi">Sudhanshu Rajdhur</option>
                        <option value="karan">Karan Sharma</option>
                    </select>
                </div>
                <div>
                    <label for="name">Name</label>
                    <input name="name" type="text" placeholder="your name" required>
                </div>
                <div>
                    <label for="email">Email</label>
                    <input type="email" name="email" placeholder="your email address" required>
                </div>
                <div>
                    <label for="message">Message</label>
                    <textarea name="message" id="message" cols="30" rows="10" placeholder="type message here ..." required></textarea>
                </div>
                <div>
                    <button type="submit">send</button>
                </div>
            </form>
        </div>
    </div>
    
<%- include('footer'); -%>