<%- include('partials/header') -%>
<body>
    <link rel="stylesheet" href="/public/styles/form.css">
    
    <form action="/auth/signup" method="post">
        <h1>signup</h1>
        <input type="text" name="username" id="usertext" placeholder="John Doe" required>
        <input type="email" name="email" id="email" placeholder="john_doe@gmail.com" required>
        <input type="password" name="password" id="password" placeholder="john's password" required>
        <input type="password" name="cpassword" id="cpassword" placeholder="john's password confirmation" required>
        <input type="text" name="_csrf" id="_csrf" value="<%= csrfToken %>" hidden>
        <button type="submit">signup</button>
        <small><%= typeof error !== 'undefined' ? `error: ${error}` : '' %></small>
    </form>

</body>
</html>